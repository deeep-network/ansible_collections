[Unit]
Description=IPFS daemon
After=network.target

[Service]
Type=notify
User=ipfs
Group=ipfs
StateDirectory=ipfs
TimeoutStartSec=10800
LimitNOFILE={{ ipfs_fd_max }}
MemorySwapMax=0
{% if ipfs_private_network %}
Environment="LIBP2P_FORCE_PNET=1"
{% endif %}
Environment="IPFS_LOGGING=info"
Environment="IPFS_FD_MAX={{ ipfs_fd_max}}"
ExecStart=/usr/local/bin/ipfs daemon --migrate {%- if ipfs_enable_gc %} --enable-gc{% endif %}

Restart=on-failure
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
